<?php

class Users{
 
 private $db;

 public function __construct($database){
  
   $this->db=$database;

}

 
public function user_exists($roll) {
 
	$query = $this->db->prepare("SELECT COUNT(`Id`) FROM `Records` WHERE `Roll`= ?");
	$query->bindValue(1, $roll);
 
	try{
 
		$query->execute();
		$rows = $query->fetchColumn();
 
		if($rows == 1){
			return true;
		}else{
			return false;
		}
 
	} catch (PDOException $e){
		die($e->getMessage());
	}
 
}
 


}
?>
