		<form method="post" action="">
			<h4>Roll Number:</h4>
			<input type="text" name="roll" />
                 
			<input type="submit" name="submit" value="Enter" />
		</form>
 
 
		<?php 
		# if there are errors, they would be displayed here.
		if(empty($errors) === false){
			echo '<p>' . implode('</p><p>', $errors) . '</p>';
		}
 
		?>
 
	</div>
