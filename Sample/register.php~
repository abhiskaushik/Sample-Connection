<?php 
require ('core/init.php');
 
# if form is submitted
if (isset($_POST['submit'])) {
 
	if(empty($_POST['roll'])){
 
		$errors[] = 'This is required.';
 
	}else{
        
        #validating user's input with functions that we will create next
        if ($users->user_exists($_POST['roll']) === true) {
            $errors[] = 'That Roll has registered';
        }
        
	}
 
	if(empty($errors) === true){
		
		$roll 	= htmlentities($_POST['roll']);
		//$password 	= $_POST['password'];
		
               $users->register($roll);// Calling the register function, which we will create soon.
		      $url="test.php?rollUrl=". $roll;
                header("Location:$url");
		//header('Location: register.php?success');
		//header('Location:localhost/sv/home.php)
		exit();
	}
}
 
if (isset($_GET['success']) && empty($_GET['success'])) {
  echo 'Thank you for registering. Please check your email.';
}
?>
<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<link rel="stylesheet" type="text/css" href="css/style.css" >
